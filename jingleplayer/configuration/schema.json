{
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "definitions": {
        "event_startend": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "properties": {
                        "relative_to": {
                            "type": "string"
                        },
                        "offset": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "relative_to"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        "event": {
            "type": "object",
            "properties": {
                "start": {
                    "$ref": "#/definitions/event_startend"
                },
                "end": {
                    "$ref": "#/definitions/event_startend"
                },
                "duration": {
                    "type": "string"
                },
                "tags": {
                    "type": "string"
                },
                "announcement_file": {
                    "type": "string"
                },
                "playlist": {
                    "type": "string"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "start",
                        "end"
                    ]
                },
                {
                    "required": [
                        "start",
                        "duration"
                    ]
                }
            ],
            "additionalProperties": false
        },
        "jingle_trigger": {
            "type": "string",
            "enum": [
                "event_start",
                "event_end"
            ]
        },
        "jingle_actions_spec": {
            "type": "string"
        },
        "jingle_tags_spec": {
            "oneOf": [
                {
                    "properties": {
                        "include_only": {
                            "type": "string"
                        }
                    }
                },
                {
                    "properties": {
                        "exclude": {
                            "type": "string"
                        }
                    }
                }
            ],
            "additionalProperties": false
        },
        "jingle": {
            "type": "object",
            "properties": {
                "audio_file": {
                    "type": "string"
                },
                "trigger": {
                    "$ref": "#/definitions/jingle_trigger"
                },
                "offset": {
                    "type": "string"
                },
                "pre_actions": {
                    "$ref": "#/definitions/jingle_actions_spec"
                },
                "actions": {
                    "$ref": "#/definitions/jingle_actions_spec"
                },
                "tags": {
                    "$ref": "#/definitions/jingle_tags_spec"
                }
            },
            "required": [
                "trigger"
            ],
            "additionalProperties": false
        },
        "spotify_playlist": {
            "type": "object",
            "properties": {
                "uri": {
                    "type": "string"
                },
                "announcement_file": {
                    "type": "string"
                }
            },
            "required": [
                "uri"
            ],
            "additionalProperties": false
        }
    },
    "properties": {
        "config_version": {
            "const": "1.0"
        },
        "default_delay": {
            "type": "string"
        },
        "playlists": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/spotify_playlist"
            }
        },
        "events": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/event"
            }
        },
        "jingles": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/jingle"
            }
        }
    },
    "required": [
        "config_version",
        "events",
        "jingles"
    ],
    "additionalProperties": false
}